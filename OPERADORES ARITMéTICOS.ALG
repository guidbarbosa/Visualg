algoritmo "Operadores Aritméticos"
var
   resultado, valor01, valor02, valor03 : real
inicio
      escreval("Qual o 1º valor? ")
      leia (valor01)
      escreval("Qual o 2º valor? ")
      leia (valor02)
      escreval("Qual o 3º valor? ")
      leia(valor03)
      
      resultado <- (valor01 + valor02 + valor03) * 4
       escreva("Resultado: ", resultado)
      
fimalgoritmo